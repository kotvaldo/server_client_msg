<Window x:Class="server_client_msg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:server_client_msg"
        mc:Ignorable="d"
        Title="Server_Client" Height="450" Width="800">
    <Grid Margin="10">
        <ListBox x:Name="list_msgs" 
                 Height="250" 
                 VerticalAlignment="Top" 
                 HorizontalAlignment="Stretch" 
                 Margin="0,0,0,10" 
                 Background="WhiteSmoke"
                 BorderBrush="LightGray" 
                 BorderThickness="1"
                 Padding="5"/>

        <TextBox x:Name="edit_msg" 
                 Height="30" 
                 Margin="0,270,100,0" 
                 VerticalAlignment="Top" 
                 HorizontalAlignment="Stretch" 
                 Background="White" 
                 BorderBrush="LightGray" 
                 BorderThickness="1"
                 Padding="5"/>


        <Button x:Name="btn_send" 
                Content="Send" 
                Height="30" 
                Width="80" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right" 
                Margin="0,270,0,0"
                Background="#4CAF50" 
                Foreground="White" 
                BorderThickness="0"
                FontWeight="Bold" 
                Cursor="Hand"
                Click="btn_send_Click"/>

        <TextBlock Text="Type username:" 
           Height="30" 
           Width="100" 
           Margin="200,240,0,35" 
           VerticalAlignment="Bottom" 
           HorizontalAlignment="Left" 
           Foreground="Black" 
           FontWeight="Bold"
           FontSize="14" />
        
        <TextBox x:Name="edit_username" 
              Height="30" 
                 Width="100"
                Margin="200,270,0,10"
              VerticalAlignment="Bottom" 
                 HorizontalAlignment="Left"
              Background="White" 
              BorderBrush="LightGray" 
              BorderThickness="1"
              Padding="5"/>
        <Button x:Name="btn_connect" 
                Content="Connect to server" 
                Height="30" 
                Width="133" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Left"
                Background="#2196F3" 
                Foreground="White" 
                BorderThickness="0"
                FontWeight="Bold" 
                Cursor="Hand"
                Click="btn_connect_Click" Margin="10,0,0,10"/>

        <Button x:Name="btn_terminate" 
                Content="Terminate connection" 
                Height="30" 
                Width="133" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right"
                Background="Red" 
                Foreground="White" 
                BorderThickness="0"
                FontWeight="Bold" 
                Cursor="Hand"
                Click="btn_terminate_Click" Margin="10,0,0,10"/>
    </Grid>
</Window>
